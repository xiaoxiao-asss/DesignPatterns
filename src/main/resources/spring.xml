<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:aop="http://www.springframework.org/schema/aop"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans-4.2.xsd
        http://www.springframework.org/schema/aop
        http://www.springframework.org/schema/aop/spring-aop-4.2.xsd">


    <bean id="tank" class="com.example.designpatterns.spring.v1.Tank"></bean>
    <bean id="timeProxy" class="com.example.designpatterns.spring.v1.TimeProxy"></bean>

   <aop:config>
       <aop:aspect id="time" ref="timeProxy">
           <aop:pointcut id="runs" expression="execution(void com.example.designpatterns.spring.v1.Tank.run())"></aop:pointcut>
           <aop:before method="before" pointcut-ref="runs"></aop:before>
           <aop:after method="after" pointcut-ref="runs"></aop:after>
       </aop:aspect>
   </aop:config>



</beans>